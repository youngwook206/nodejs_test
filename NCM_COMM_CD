CREATE TABLE `NCM_COMM_CD` (
	`cid` VARCHAR(100) NOT NULL COMMENT 'PK' COLLATE 'utf8_bin',
	`COMM_CD` VARCHAR(6) NOT NULL COMMENT '공통 코드' COLLATE 'utf8_general_ci',
	`HIRK_COMM_CD` VARCHAR(6) NULL DEFAULT NULL COMMENT '상위 공통 코드' COLLATE 'utf8_general_ci',
	`COMM_CD_NM` VARCHAR(200) NOT NULL COMMENT '공통 코드 명' COLLATE 'utf8_general_ci',
	`COMM_CD_DSCR` VARCHAR(4000) NULL DEFAULT NULL COMMENT '공통 코드 설명' COLLATE 'utf8_general_ci',
	`COMM_GRP_CD` VARCHAR(5) NOT NULL COMMENT '공통 그룹 코드' COLLATE 'utf8_general_ci',
	`PADM_GRP_CD` VARCHAR(5) NULL DEFAULT NULL COMMENT '행정 그룹 코드' COLLATE 'utf8_general_ci',
	`PADM_COMM_CD` VARCHAR(5) NULL DEFAULT NULL COMMENT '행정 공통 코드' COLLATE 'utf8_general_ci',
	`SCRN_MARK_OR` INT(5) NOT NULL COMMENT '화면 표시 순서',
	`USE_YN` VARCHAR(1) NOT NULL COMMENT '사용 여부' COLLATE 'utf8_general_ci',
	`CNLK_ITEM_LTR_VL_1` VARCHAR(200) NULL DEFAULT NULL COMMENT '연계 항목 문자 값1' COLLATE 'utf8_general_ci',
	`CNLK_ITEM_LTR_VL_2` VARCHAR(200) NULL DEFAULT NULL COMMENT '연계 항목 문자 값2' COLLATE 'utf8_general_ci',
	`CNLK_ITEM_LTR_VL_3` VARCHAR(200) NULL DEFAULT NULL COMMENT '연계 항목 문자 값3' COLLATE 'utf8_general_ci',
	`CNLK_ITEM_NUM_VL_1` DECIMAL(15,2) NOT NULL COMMENT '연계 항목 숫자 값1',
	`CNLK_ITEM_NUM_VL_2` DECIMAL(15,2) NOT NULL COMMENT '연계 항목 숫자 값2',
	`CNLK_ITEM_NUM_VL_3` DECIMAL(15,2) NOT NULL COMMENT '연계 항목 숫자 값3',
	`FRST_REG_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최초 등록 회원 ID' COLLATE 'utf8_general_ci',
	`FRST_REG_DT` DATETIME NOT NULL COMMENT '최초 등록 일시',
	`LAST_MODF_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최종 수정 회원 ID' COLLATE 'utf8_general_ci',
	`LAST_MODF_DT` DATETIME NOT NULL COMMENT '최종 수정 일시',
	`DTRS_RFLT_SE` VARCHAR(6) NOT NULL COMMENT '데이터 반영 구분[NJ8]' COLLATE 'utf8_general_ci',
	`CNLK_STT_SE` VARCHAR(6) NOT NULL COMMENT '연계상태구분[NK7]' COLLATE 'utf8_general_ci',
	`CNLK_TRS_DT` DATETIME NULL DEFAULT current_timestamp() COMMENT '연계송신일시',
	`CNLK_RCV_DT` DATETIME NULL DEFAULT NULL COMMENT '연계수신일시',
	`CNLK_ERR_CN` VARCHAR(4000) NULL DEFAULT NULL COMMENT '연계오류내용' COLLATE 'utf8_general_ci',
	PRIMARY KEY (`cid`, `COMM_CD`) USING BTREE
)
COMMENT='공통 코드'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
