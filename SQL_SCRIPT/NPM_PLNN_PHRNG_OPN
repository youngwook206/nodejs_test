CREATE TABLE `NPM_PLNN_PHRNG_OPN` (
	`cid` VARCHAR(100) NOT NULL COMMENT 'PK' COLLATE 'utf8_bin',
	`SBJT_PLNN_ANCM_ID` VARCHAR(6) NOT NULL COMMENT '과제 기획 공고 ID' COLLATE 'utf8_general_ci',
	`PLNN_SBJT_ID` VARCHAR(8) NOT NULL COMMENT '기획 과제 ID' COLLATE 'utf8_general_ci',
	`OPN_SN` INT(5) NOT NULL COMMENT '의견 순번',
	`PRPSR_MBR_NM` VARCHAR(50) NOT NULL COMMENT '제안자 인력 명' COLLATE 'utf8_general_ci',
	`PRPSR_BLNG_ORGN_NM` VARCHAR(300) NULL DEFAULT NULL COMMENT '제안자 소속 기관 명' COLLATE 'utf8_general_ci',
	`EMAIL_ADDR` VARCHAR(200) NULL DEFAULT NULL COMMENT '전자우편 주소' COLLATE 'utf8_general_ci',
	`PRPS_OPN_CN` VARCHAR(4000) NOT NULL COMMENT '제안 의견 내용' COLLATE 'utf8_general_ci',
	`OPN_ATCH_DOC_ID` VARCHAR(8) NULL DEFAULT NULL COMMENT '의견 첨부 문서 ID' COLLATE 'utf8_general_ci',
	`OPN_REG_STT_SE` VARCHAR(6) NULL DEFAULT NULL COMMENT '의견 등록 상태구분[NF4]' COLLATE 'utf8_general_ci',
	`FRST_REG_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최초 등록 회원 ID' COLLATE 'utf8_general_ci',
	`FRST_REG_DT` DATETIME NOT NULL COMMENT '최종 등록 일시',
	`LAST_MODF_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최종 수정 회원 ID' COLLATE 'utf8_general_ci',
	`LAST_MODF_DT` DATETIME NOT NULL COMMENT '최종 수정 일시',
	`DTRS_RFLT_SE` VARCHAR(6) NOT NULL COMMENT '데이터 반영 구분[NJ8]' COLLATE 'utf8_general_ci',
	`CNLK_STT_SE` VARCHAR(6) NOT NULL COMMENT '연계상태구분[NK7]' COLLATE 'utf8_general_ci',
	`CNLK_TRS_DT` DATETIME NULL DEFAULT current_timestamp() COMMENT '연계송신일시',
	`CNLK_RCV_DT` DATETIME NULL DEFAULT NULL COMMENT '연계수신일시',
	`CNLK_ERR_CN` VARCHAR(4000) NULL DEFAULT NULL COMMENT '연계오류내용' COLLATE 'utf8_general_ci',
	PRIMARY KEY (`cid`, `SBJT_PLNN_ANCM_ID`, `PLNN_SBJT_ID`, `OPN_SN`) USING BTREE
)
COMMENT='인터넷 공시 및 공청회 의견'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
