CREATE TABLE `NPM_PLNN_ANCM` (
	`cid` VARCHAR(100) NOT NULL COMMENT 'PK' COLLATE 'utf8_bin',
	`SBJT_PLNN_ANCM_ID` VARCHAR(6) NOT NULL COMMENT '과제 기획 공고 ID' COLLATE 'utf8_general_ci',
	`SBJT_PLNN_YY` VARCHAR(4) NOT NULL COMMENT '과제 기획 년도' COLLATE 'utf8_general_ci',
	`PLNN_ANCM_TP_SE` VARCHAR(6) NOT NULL COMMENT '기획 공고 유형 구분[TQ2]' COLLATE 'utf8_general_ci',
	`BSNS_TP_SE` VARCHAR(6) NULL DEFAULT NULL COMMENT '사업 유형 구분[GA2]' COLLATE 'utf8_general_ci',
	`PLNN_TECH_FILD_CD` VARCHAR(7) NULL DEFAULT NULL COMMENT '기획 기술 분야 코드' COLLATE 'utf8_general_ci',
	`SBJT_PLNN_ANCM_TN` INT(2) NOT NULL COMMENT '과제 기획 공고 차수',
	`ANCM_DE` DATETIME NOT NULL COMMENT '공고 일자',
	`SBJT_PLNN_ANCM_TL_NM` VARCHAR(200) NOT NULL COMMENT '과제 기획 공고 제목 명' COLLATE 'utf8_general_ci',
	`RCVE_STR_DE` DATETIME NOT NULL COMMENT '접수 시작 일자',
	`RCVE_END_DE` DATETIME NOT NULL COMMENT '접수 종료 일자',
	`RCVE_CLOS_TM` VARCHAR(6) NOT NULL COMMENT '접수 마감 시각' COLLATE 'utf8_general_ci',
	`ANCM_CHRGR_MBR_ID` VARCHAR(8) NOT NULL COMMENT '공고 담당자 인력 ID' COLLATE 'utf8_general_ci',
	`DMNEX_MODE_ATCH_DOC_ID` VARCHAR(8) NULL DEFAULT NULL COMMENT '수요조사 양식 첨부 문서 ID' COLLATE 'utf8_general_ci',
	`DMNEX_FRML_ATCH_DOC_ID` VARCHAR(8) NULL DEFAULT NULL COMMENT '수요조사 서식 첨부 문서 ID' COLLATE 'utf8_general_ci',
	`PLNN_ANCM_PRG_SE` VARCHAR(6) NULL DEFAULT NULL COMMENT '기획 공고 진행 구분 [NG7]' COLLATE 'utf8_general_ci',
	`FRST_REG_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최초 등록 회원 ID' COLLATE 'utf8_general_ci',
	`FRST_REG_DT` DATETIME NOT NULL COMMENT '최종 등록 일시',
	`LAST_MODF_MBRS_ID` VARCHAR(8) NOT NULL COMMENT '최종 수정 회원 ID' COLLATE 'utf8_general_ci',
	`LAST_MODF_DT` DATETIME NOT NULL COMMENT '최종 수정 일시',
	`ANCM_GIDBK_PATH_NM` VARCHAR(200) NULL DEFAULT NULL COMMENT '공고 안내문 경로 명' COLLATE 'utf8_general_ci',
	`ANCM_GIDBK_FILE_NM` VARCHAR(300) NULL DEFAULT NULL COMMENT '공고 안내문 파일 명' COLLATE 'utf8_general_ci',
	`PLNN_ANCM_RCVE_WAY_SE` VARCHAR(6) NOT NULL COMMENT '기획 공고 접수 방식 구분[NQ0]' COLLATE 'utf8_general_ci',
	`PLNN_ANCM_PURS_SE` VARCHAR(6) NULL DEFAULT NULL COMMENT '기획 공고 목적 구분[NW0]' COLLATE 'utf8_general_ci',
	`DTRS_RFLT_SE` VARCHAR(6) NOT NULL COMMENT '데이터 반영 구분[NJ8]' COLLATE 'utf8_general_ci',
	`CNLK_STT_SE` VARCHAR(6) NOT NULL COMMENT '연계상태구분[NK7]' COLLATE 'utf8_general_ci',
	`CNLK_TRS_DT` DATETIME NULL DEFAULT current_timestamp() COMMENT '연계송신일시',
	`CNLK_RCV_DT` DATETIME NULL DEFAULT NULL COMMENT '연계수신일시',
	`CNLK_ERR_CN` VARCHAR(4000) NULL DEFAULT NULL COMMENT '연계오류내용' COLLATE 'utf8_general_ci',
	PRIMARY KEY (`cid`, `SBJT_PLNN_ANCM_ID`) USING BTREE
)
COMMENT='과제 기획 공고'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
